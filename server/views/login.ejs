<%- include('head', { title: "Login - Craft for a Cause" }); %>

<div class="teal lighten-3 valign-wrapper" style="width: 100%; height: 100%; position: absolute;">
  <div class="center-align" style="margin: auto; max-width: 300px; width: 100%;">
    <img src="img/logo.png" height="150" />
    <div class="card" style="width: 100%;">
      <form action="/login" method="post">
        <div class="card-content">
          <% if (error != "") { %>
          <div class="card red white-text" style="margin-bottom: 20px;">
            <div class="card-content">
              <%= error %>
            </div>
          </div>
          <% } %>
          <div class="input-field col s6">
            <input id="email" type="email" class="validate">
            <label for="email" style="left: 0;">Email</label>
          </div>
          <div class="input-field col s6">
            <input id="password" type="password" class="validate">
            <label for="password" style="left: 0;">Password</label>
          </div>
        </div>
        <div class="card-action">
          <button class="btn teal waves-effect waves-light">Login</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('foot'); %>
